{
  "name": "@pillarwallet/pillarwallet-nodejs-sdk",
  "version": "1.15.4",
  "description": "The Node.js SDK, making it easy to interact with the Pillar API.",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest unit",
    "test:integration": "jest integration",
    "test:coverage": "jest --coverage",
    "test:unit:coverage": "jest unit --verbose  --coverage",
    "test:integration:coverage": "jest integration --verbose  --coverage",
    "compile": "tsc",
    "build": "webpack",
    "build-production": "webpack --mode=production",
    "lint": "tslint -p tsconfig.tslint.json",
    "lint:fix": "tslint --fix -p tsconfig.tslint.json"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pillarwallet/pillarwallet-nodejs-sdk.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pillarwallet/pillarwallet-nodejs-sdk/issues"
  },
  "homepage": "https://github.com/pillarwallet/pillarwallet-nodejs-sdk#readme",
  "dependencies": {
    "@pillarwallet/common-formatters": "0.2.29",
    "@pillarwallet/plr-auth-sdk": "1.1.2-84",
    "@types/ethereumjs-util": "5.1.1",
    "@types/node": "9.6.6",
    "@types/uuid": "3.4.4",
    "ajv": "6.4.0",
    "ajv-keywords": "3.2.0",
    "axios": "0.18.0",
    "crypto": "1.0.1",
    "ethereumjs-util": "5.2.0",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@types/jest": "22.2.3",
    "@types/nock": "9.3.0",
    "form-data": "2.3.2",
    "jest": "22.4.3",
    "nock": "9.5.0",
    "ts-jest": "22.4.4",
    "ts-loader": "4.3.0",
    "ts-node": "6.0.0",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.9.2",
    "tslint-config-prettier": "1.14.0",
    "tslint-plugin-prettier": "1.3.0",
    "typescript": "2.8.3",
    "webpack": "4.8.1",
    "webpack-cli": "2.1.3"
  }
}
