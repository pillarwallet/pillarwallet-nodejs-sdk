{
  "name": "@pillarwallet/pillarwallet-nodejs-sdk",
  "version": "1.1.9",
  "description": "The Node.js SDK, making it easy to interact with the Pillar API.",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest unit",
    "test:integration": "jest integration",
    "compile": "tsc",
    "build": "webpack",
    "build-production": "webpack --mode=production",
    "lint": "tslint -p '.'",
    "lint:fix": "tslint --fix -p  '.'"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pillarwallet/pillarwallet-nodejs-sdk.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pillarwallet/pillarwallet-nodejs-sdk/issues"
  },
  "homepage": "https://github.com/pillarwallet/pillarwallet-nodejs-sdk#readme",
  "dependencies": {
    "@pillarwallet/plr-auth-sdk": "1.1.2-84",
    "@types/ethereumjs-util": "5.1.1",
    "@types/node": "9.6.6",
    "ajv": "6.4.0",
    "ajv-keywords": "3.2.0",
    "axios": "0.18.0",
    "ethereumjs-util": "5.2.0",
    "tslint-config-airbnb": "5.8.0"
  },
  "devDependencies": {
    "@types/jest": "22.2.3",
    "jest": "22.4.3",
    "supertest": "3.0.0",
    "ts-jest": "22.4.4",
    "ts-loader": "4.3.0",
    "ts-node": "6.0.0",
    "tslint": "5.9.1",
    "typescript": "2.8.3",
    "webpack": "4.8.1",
    "webpack-cli": "2.1.3"
  }
}
