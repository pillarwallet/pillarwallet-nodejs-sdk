{
  "name": "pillar-combined-backend-server",
  "version": "1.0.10",
  "description": "Registration backend for the Pillar Wallet",
  "main": "index.js",
  "scripts": {
    "test": "ENV=test jest --verbose",
    "test:coverage": "ENV=test jest --coverage",
    "plato": "es6-plato -r -x migrations -d ./reports/plato ./api",
    "start": "node --inspect index.js",
    "start-dev": "nodemon index.js",
    "linter": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.pillarproject.io:wallet/registration-backend.git"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "es6-plato": "latest",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-jest": "^21.15.0",
    "hdkey": "0.8.0",
    "jest": "22.4.0",
    "jest-cli": "22.4.3",
    "jest-html-reporter": "2.0.0",
    "mockdate": "2.0.2",
    "sqlite3": "latest",
    "supertest": "3.0.0"
  },
  "dependencies": {
    "@pillarwallet/plr-auth-sdk": "^0.1.0",
    "acorn-globals": "4.1.0",
    "body-parser": "1.18.2",
    "convict": "^4.2.0",
    "dotenv": "4.0.0",
    "ethereumjs-util": "5.1.3",
    "express": "4.16.2",
    "firebase-admin": "5.9.1",
    "fs": "0.0.1-security",
    "hdkey": "0.8.0",
    "https": "1.0.0",
    "moment": "2.20.1",
    "morgan": "1.9.0",
    "mysql2": "1.5.1",
    "nodejs-model": "0.1.6",
    "request": "2.85.0",
    "request-promise-native": "1.0.5",
    "secp256k1": "3.4.0",
    "sequelize": "4.31.2",
    "sharp": "0.20.1",
    "uuid": "3.2.1",
    "winston": "3.0.0-rc4",
    "winston-syslog": "2.0.0"
  },
  "bundledDependencies": [
    "body-parser",
    "dotenv",
    "ethereumjs-util",
    "express",
    "firebase-admin",
    "fs",
    "https",
    "moment",
    "morgan",
    "mysql2",
    "nodejs-model",
    "request",
    "request-promise-native",
    "secp256k1",
    "sequelize",
    "sharp",
    "uuid"
  ],
  "jest": {
    "roots": [
      "api"
    ],
    "testRegex": "\\.spec\\.js$",
    "testResultsProcessor": "./node_modules/jest-html-reporter",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/reports/**",
      "!**/glue/**"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "coverageDirectory": "./reports"
  },
  "jest-html-reporter": {
    "pageTitle": "Jest results",
    "outputPath": "./reports/jest/test-report.html",
    "includeFailureMsg": true
  },
  "engines": {
    "node": ">=8.7.0"
  }
}
